@model IEnumerable<DataAccessLayer.Employee>
<style>
    table {
        font-family: verdana,arial,sans-serif;
        font-size: 11px;
        color: #333333;
        border-width: 1px;
        border-color: #999999;
        border-collapse: collapse;
    }

        table th {
            background: #b200ff;
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #999999;
            font-weight:bold;
            color:#FFFFFF;
        }

        table td {
            background: #dcddc0;
            border-width: 1px;
            padding: 8px;
            border-style: solid;
            border-color: #999999;
        }

    .foot {
        text-align: center;
    }
</style>



@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(source:Model,canPage:true,rowsPerPage:10);
    grid.Pager(WebGridPagerModes.All);
}

<h2>Index</h2>

<div>

    @grid.GetHtml(tableStyle: "table", footerStyle: "foot",
    columns:grid.Columns(
                grid.Column(columnName:"Name",header:"Name"),
                grid.Column(columnName:"Designation",header:"Designation"),
                grid.Column(columnName:"Gender",header:"Gender"),
                grid.Column(columnName:"Salary",header:"Salary"),
                grid.Column(columnName:"City",header:"City"),
                grid.Column(columnName:"State",header:"State"),
                grid.Column(columnName:"Zip",header:"Zip")

    ))

</div>
